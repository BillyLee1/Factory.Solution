@using Factory.Models;

<p>@Html.ActionLink("Home", "Index", "Home")</p>

<h1>Current Machines </h1>

<p>@Html.ActionLink("Click to Add a Machine", "Create", "Machines")</p>

@if (@Model.Count == 0)
{
  <h2>There are currently no machines </h2>
}

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new {id = machine.MachineId}) </li>
  }

@using Factory.Models;

<h1>Current Engineers </h1>

@if (@Model.Count == 0)
{
  <h2>There are currently no engineers </h2>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new {id = engineer.EngineerId}) </li>
  }

<p>@Html.ActionLink("Click to Add an Engineer", "Create", "Engineers")</p>
